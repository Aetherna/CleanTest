<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aethernadev.ui">

    <application
        android:name="com.aethernadev.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aethernadev.ui.searchproducts.SearchProducts"
            android:label="@string/menu_productsComponent"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.aethernadev.ui.Menu"
            android:label="@string/menu"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aethernadev.ui.addproduct.AddProduct"
            android:label="@string/menu_addProduct"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aethernadev.ui.productslist.ProductsList"
            android:label="@string/products_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
